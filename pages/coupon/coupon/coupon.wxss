page{
  background-color: #f5f5f5;
}
.coupon-header{
  background-color: #fff;
  height: 88rpx;
}
.coupon-header-links{
  display: flex;
}
.header-links-warp{
  -webkit-box-flex: 1.0;
  -webkit-flex-grow: 1;
  flex-grow: 1;
  position: relative;
}
.header-links-warp text{
    display: block;
    text-align: center;
    border-bottom:3px solid transparent;
    padding: 0 10rpx;
    line-height: 85rpx;
    color: #333;
    font-size: 30rpx;
    margin: 0 5px;
  }
 .header-links-warp text.selected{
    border-bottom:3px solid #ff8053;
    color: #ff8053;
  }
  .coupon-body{
    padding: 35rpx 40rpx;
  }
  .coupon-item{
    margin-bottom: 40rpx;
    box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    padding-right: 195rpx;
    position: relative;
    height: 174rpx;
    background: #fffee3;
  }
  .coupon-item-right{
    position: absolute;
    background: #ff8053;
    top:0;
    right: 0;
    width: 195rpx;
    height: 174rpx;
    overflow: hidden;
  }
  .coupon-item-line{
    width: 20rpx;
    height: 174rpx;
    float: left;
  }
  .coupon-item-line .line-bg{
    display: block;
    width: 100%;
    height: 100%;
  }
  .coupon-item-r-txt{
    float: left;
    width: 175rpx;
  }
  .coupon-item-r-txt text {
    padding:20rpx 35rpx 20rpx 30rpx;
    line-height:66rpx;
    color:#fffee3;
    font-size:46rpx;
    display:block;
    text-align:justify;
    letter-spacing:4px;
}
.coupon-item-left{
  padding: 10rpx;
}
.coupon-item-l-top{
  margin-top: 5rpx;
}
.coupon-it-jg{
  float: left;
  font-size: 70rpx;
  color: #ff8053;
  line-height: 74rpx;
  margin:0 10rpx 0 40rpx; 
}
.coupon-it-jg-nr .jg-nr-top{
  font-size: 34rpx;
  color: #ff8053;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}
.coupon-it-jg-nr .jg-nr-bottom{
  font-size: 24rpx;
  color: #ff8053;
  line-height: 30rpx;
}
.coupon-it-jg-nr .jg-nr-bottom .red{
  color: #ff4300;
}
.coupon-item-l-bottom{
  margin-top: 10rpx;
}
.coupon-item-l-bottom text{
  font-size: 20rpx;
  color: #999;
  display: block;
  line-height: 32rpx;
}
.coupon-item-ysy .coupon-item-right{
  background: #b1b1b1;
}
.coupon-item-ygq{
  background: #e6e6e6;
}
.coupon-item-ygq .coupon-item-right{
  background: #b1b1b1;
}
.coupon-item-ygq .coupon-item-r-txt text,.coupon-item-ysy .coupon-item-r-txt text{
  padding: 0;
  line-height: 174rpx;
}
.coupon-item-ygq .coupon-it-jg,.coupon-item-ygq .coupon-it-jg-nr .jg-nr-top,.coupon-it-jg-nr .jg-nr-bottom{
  color: #999;
}