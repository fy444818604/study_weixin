/* pages/myexam/index/index.wxss */

.my-exam {
  width: 100%;
}

.my-exam .parper-tab {
  margin-top: 48rpx;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #F2F2F4;
}

.my-exam .parper-tab .scroll-view_H {
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}


.my-exam .parper-tab .scroll-view-item_H{
  position: relative;
 display: inline-block;
 height: 62rpx;
 margin-right: 56rpx;
}
.my-exam .parper-tab .scroll-view-item_H .line {
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -32rpx;
  margin-top: 24rpx;
  width: 64rpx;
  height: 10rpx;
  background: #FF8053;
  border-radius: 5rpx;
}

.my-exam .exam-list {

}

.my-exam .exam-list .exam-item {
  width: 100%;
  padding: 50rpx 32rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #F2F2F4;
}

.my-exam .exam-list .exam-item .title {
  font-weight: 700;
  color: #333333;
}
.my-exam .exam-list .exam-item .label {
  margin-top: 25rpx;
}

.my-exam .exam-list .exam-item .label .label-item {
  width: 84rpx;
  height: 48rpx;
  box-sizing: border-box;
  background-color: #F5F5F5;
  color: #999999;
  border-radius: 8rpx;
  text-align: center;
  line-height: 48rpx;
}

.my-exam .exam-list .exam-item .bottom {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.my-exam .exam-list .exam-item .bottom .leave-time , .my-exam .exam-list .exam-item .bottom .over {
  color: #999999;
}
.my-exam .exam-list .exam-item .bottom .btn {
  width: 120rpx;
  height: 56rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 56rpx;
  background-color: #FF8053;
  color: #fff;
  border-radius: 28rpx;
}