/* pages/web/exam/examDetail/examDetail.wxss */
.item-list{
 display: flex;
 justify-content: space-between;
 align-items: center;
 margin: 0 30px;
 padding: 15px 0;
 border-bottom: 1px solid #f2f2f4;
}
.item-name{
  color: #999;
  font-weight: 400;
  font-size: 28rpx;
}
.item-value{
  font-size: 30rpx;
  color: #333333;
  font-weight: 400;
  max-width: 70%;
}
.exam-title{
  font-weight: 700;
  font-size: 36rpx;
  color: #333333;
  margin: 20px 0;
  text-align: center;
}
.exam-detail{
  padding-bottom: 127rpx
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 125rpx;
  background: #fafafa;
  border-top: 1px solid #eaeaea;
  width: calc(100% - 30px);
  z-index: 99;
  display: flex;
  align-items: center;
  padding: 0 15px
}
.exam-btn{
  color: #ffffff;
  font-weight: 400;
  font-size: 32rpx;
  text-align: center;
  background: #ff652f;
  border-radius: 40px;
  height: 80rpx;
  width: 100%;
  line-height: 40px;
}
.bdn{
  border: none;
}