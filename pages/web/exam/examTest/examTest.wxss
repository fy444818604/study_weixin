/* pages/web/exam/examTest/examTest.wxss */

.exam-top {
  display: flex;
  justify-content: space-between;
  padding: 15px;
  border-bottom: 1px solid #f2f2f4;
}

.exam-name{
  color: #333;
  font-weight: 400;
  font-size: 28rpx;
}

.exam-title{
  color: #999;
  font-weight: 400;
  font-size: 28rpx; 
}

.exam-current{
  color: #FF8053;
  font-size: 26rpx;
}

.exam-all{
  color: #666;
  font-size: 26rpx;
}

.exam-block{
  padding: 15px;
}

swiper{
  height: calc(100vh - 191px);
}

.opt{
  display: flex;
  align-items: center;
  margin-top: 28px;
}

.opt-option{
  height: 28px;
  width: 28px;
  border-radius: 100%;
  line-height: 28px;
  text-align: center;
  color: #333333;
  font-size: 26rpx;
  font-weight: 400;
  border: 2px solid #f2f2f4;
  margin-right: 12px;
}

.opt-option.active {
  background-color: #73d27f;
  color: #fff;
}

.exam-btm-item image{
  height: 24px;
  width: 24px;
}

.exam-btm-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20%;
}

.exam-btm{
  box-shadow: 0px -3px 8px 0px rgba(0,0,0,0.04); 
  height: 63px;
  display: flex;
  align-items: center;
}

.exam-fun{
  font-size: 26rpx;
  font-weight: 400;
  color: #333;
  margin-top: 2px;
}

.count{
  display: flex;
  margin-bottom: 40px;
  height: 36px;
}

.text{
  width: calc(100% - 30px);
  height: 200px;
  padding: 12px;
  background: #f5f5f5;
  border-radius: 12px;
  margin-top: 36px;
}