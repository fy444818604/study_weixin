page{
  background-color: #f5f5f5;
}
.oder-header{
  background-color: #fff;
  height: 88rpx;
}
.oder-header-links{
  display: flex;
}
.header-links-warp{
  -webkit-box-flex: 1.0;
  -webkit-flex-grow: 1;
  flex-grow: 1;
  position: relative;
}
.header-links-warp text{
    display: block;
    text-align: center;
    border-bottom:3px solid transparent;
    padding: 0 10rpx;
    line-height: 85rpx;
    color: #333;
    font-size: 30rpx;
    margin: 0 5px;
  }
 .header-links-warp text.selected{
    border-bottom:3px solid #ff8053;
    color: #ff8053;
  }
  .oder-body{
    margin-top: 25rpx;
  }
  .oder-body-item{
    margin-bottom: 25rpx;
    background: #fff;
  }
  .oder-number{
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    line-height: 80rpx;
    padding: 0 15rpx;
    border-bottom:1px solid #dddddd; 
  }
  .oder-number-l{
    font-size: 24rpx;
  }
  .oder-number-r{
    font-size: 28rpx;
  }
  .oder-coures{
    border-bottom:1px solid #dddddd; 
    padding: 20rpx;
  }
  .course-li-ul{
  -webkit-overflow-scrolling: touch;
  overflow-x: hidden;
  word-break: break-all;
  position: relative;
}
.course-item-li{
  display: block;
}
.course-item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start
}
.cou-item-pic{
  width: 253rpx;
  height: 141rpx;
  margin: 0 20rpx;
}
.cou-item-pic .pic{
  width: 253rpx;
  height: 141rpx;
  display: block;  
}
.cou-item-txt{
  position: relative;
    min-height: 2.2rem;
    padding-right: 0.75rem;
    width: 100%;
    overflow: hidden;
}
.item-txt-title text{
  font-size: 32rpx;
}
.item-txt-teach text{
  font-size: 26rpx;
}
.teach-name{
  margin-right: 15rpx;
}
.item-txt-art{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}
.item-txt-art text{
  font-size: 26rpx;
}
.navigator-hover{
  background-color: rgba(250,250,250,1); 
  opacity: 0.9;
}
.navigator-hover .item-txt-title text{
  color: #ff8053;
}
.no-data-wrap image{
  display: block;
  margin: 140rpx auto 0;
  width: 238rpx;
  height: 284rpx;
}
.oder-btn{
  height: 52rpx;
  padding: 20rpx;
}
.oder-btn-info{
  display: block;
  float: right;
  height: 50rpx;
  line-height: 50rpx;
  border-width: 1px;
  border-style: solid;
  border-radius: 6rpx;
  text-align: center;
  width: 176rpx;
  font-size: 26rpx;
  margin-left: 30rpx;
}
