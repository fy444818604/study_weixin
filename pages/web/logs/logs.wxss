.login-top-box{padding: 30rpx 0 120rpx;background: #ff8053;position: relative;height: 240rpx}
.login-top-bg{position: absolute;width: 100%;bottom:0;left: 0;height: 120rpx}
.login-top-bg image{display: block;width: 100%;height: 120rpx;}
.login-tit-pic{width: 153rpx;height: 153rpx;margin: 0rpx auto;border-radius: 50%;overflow: hidden;}
.login-tit-pic image{display: block;width: 100%;height: 100%;}
.login-name{margin: 15rpx 50rpx;font-size: 32rpx}
.login_body{margin: 80rpx 60rpx 0;}
.login_body form{display: block;}
.login-wrp{margin-bottom: 60rpx;}
.login-item{border: 1px solid #c3c2c1;height: 70rpx;background: #fff;border-radius: 70rpx;padding: 0 30rpx;}
.login-item-icon{display: inline-block;font-size: 46rpx;color: #999999;vertical-align: middle;}
.login-item-icon text{font-size: 48rpx;}
.login-item-input{display: inline-block;padding: 0 5rpx 0 20rpx;height: 70rpx;vertical-align: middle;width:80%}
.login-item-input input{border: 0;background: transparent;font-size: 30rpx;color: #999;display: block;width: 100%;height: 70rpx;line-height: 70rpx;}
.login-button{height: 80rpx;line-height: 80rpx;text-align: center;color: #fff;font-size: 34rpx;background: #ff8053;border-radius: 80rpx;}
.login-log-txt text{font-size: 28rpx;}
.uc-in-menu-list{border-top:1px solid #dddddd;}
.uc-in-menu-item {border-bottom:1px solid #dddddd;background:#fff;padding:0 100rpx;position:relative;height:80rpx;line-height:80rpx;}
.menu-pic{position: absolute;height: 80rpx;line-height: 80rpx;color: #ff7e57;top:0;left: 30rpx;}
.menu-pic text{font-size: 38rpx;}
.menu-arrow{position: absolute;height: 80rpx;line-height: 80rpx;font-size: 36rpx;top:0;right:20rpx;color: #666;}
.navigator{height: auto;width: auto;display: block;}
.nemu-name{height: 80rpx;line-height: 80rpx;font-size: 32rpx;color: #333;}
.menu-item-line{background: #f8f8f8;height: 25rpx;}
.login-button-out{width: 90%;margin: 50rpx auto 100rpx;}
.uc-in-menu-item.navigator-hover{background: #fff4f0;opacity: 1;}
.uc-in-menu-item.navigator-hover .menu-arrow{color: #ff8053;}
.login-wx{background: none !important}
.login-wx::after{border: none}
.login-wx image{width: 32px; height: 32px}
